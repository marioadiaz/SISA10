<div class="modal fade" id="buscador_tecnico" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-items-title">Buscador de tecnicos</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body-items modal-body" id="modal-body-items">
        <div class="form-group">
            <label for="buscador">Ingresa el nombre del tecnico</label>
            <input type="text" class="form-control" data-venta = "<%= @venta.id %>" id="buscador_tecnicos" placeholder="Apellido tecnico...">
        </div>
        <table class="table table-dark" id="tabla_buscador_tecnicos" >
            <thead>
            <tr>
            <th >DNI</th>  
            <th >Nombre</th>
            <th >Agregar</th>
            </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
      </div>
      <div class="modal-footer" id="modal-footer-items">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>